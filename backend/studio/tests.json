{
  "tests": [
    {
      "name": "Get promo releases for nonexistent user",
      "method": "GET",
      "path": "/?type=promo&user_id=999",
      "expectedStatus": 200,
      "expectedBody": {
        "promos": []
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create promo release",
      "method": "POST",
      "path": "/?type=promo",
      "body": {
        "user_id": 1,
        "upc": "123456789012",
        "release_description": "Test description",
        "key_track_name": "Test Track",
        "artists": "Test Artist"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "promo": {
          "upc": "123456789012"
        }
      },
      "bodyMatcher": "partial"
    }
  ]
}
